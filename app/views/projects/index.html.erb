<div class="container centered_container">
  <% @projects.each do |project| %>
    <a href=<%=project_path(project)%> class="card w-100 border-success mb-3">
      <div class="card-header bg-transparent border-success"><%= project.name %></div>
      <div class="card-body text-success">
        <p class="card-text"><%= project.description %></p>
      </div>
  </a>
  <% end %>
</div>
